<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Material Design 3 -->
    <style name="Theme.HPRTransport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        
        <!-- Tertiary color. -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        
        <!-- Error color. -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        
        <!-- Background & Surface. -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- Outline. -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Material Components Styles -->
        <item name="materialButtonStyle">@style/Widget.HPRTransport.Button</item>
        <item name="textInputStyle">@style/Widget.HPRTransport.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.HPRTransport.CardView</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.HPRTransport.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.HPRTransport.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HPRTransport.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HPRTransport.Body2</item>
        
        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.HPRTransport.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.HPRTransport.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.HPRTransport.LargeComponent</item>
    </style>
    
    <!-- Button Style -->
    <style name="Widget.HPRTransport.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">@dimen/elevation_small</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- Text Input Layout Style -->
    <style name="Widget.HPRTransport.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_medium</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
    </style>
    
    <!-- Card View Style -->
    <style name="Widget.HPRTransport.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/padding_medium</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.HPRTransport.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_size_display</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HPRTransport.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.HPRTransport.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
    
    <style name="TextAppearance.HPRTransport.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>
    
    <!-- Shape Styles -->
    <style name="ShapeAppearance.HPRTransport.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>
    
    <style name="ShapeAppearance.HPRTransport.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>
    
    <style name="ShapeAppearance.HPRTransport.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_large</item>
    </style>
</resources>